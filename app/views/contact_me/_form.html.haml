= form_for @contact_me, class: 'about__form' do |f|
  %fieldset
    .row
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :name, 'Name', class: 'form__label'
        %dd.form__item
          = f.text_field :name, class: 'form__field', placeholder: 'Amazing Person'
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :email, 'Email', class: 'form__label'
        %dd.form__item
          = f.email_field :email, class: 'form__field', placeholder: 'amazing_person@example.com'
    .row
      %dl.form__group
        %dt.form__item
          = f.label :message, 'Your Message', class: 'form__label'
        %dd.form__item
          = f.text_area :message, class: 'form__field form__field--vert-resizeable', placeholder: "What do you want to say?"
  .form__group
    = f.submit 'Send', class: 'btn btn--wide'
