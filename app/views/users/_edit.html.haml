= form_for user do |f|
  .form__group
    = f.submit 'Update Profile', class: 'btn btn--wide'
  %fieldset
    .row
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :name, 'Name', class: 'form__label'
        %dd.form__item
          = f.text_field :name, class: 'form__field', placeholder: 'Amazing Person'
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :email, 'Email', class: 'form__label'
        %dd.form__item
          = f.email_field :email, class: 'form__field', placeholder: 'amazing_person@example.com'
    .row
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :password, 'New Password', class: 'form__label'
        %dd.form__item
          = f.password_field :password, class: 'form__field', placeholder: 'potatohorsevehicleextension'
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :summary, class: 'form__label'
        %dd.form__item
          = f.text_area :summary, class: 'form__field form__field--vert-resizeable'
    .row
      %dl.form__group.form__group--6of12
        %dt.form__item
          %h4 Current Portrait
        %dd.form__item
          %img.about__img(src="#{user.portrait}")
      %dl.form__group.form__group--6of12
        %dt.form__item
          = f.label :portrait, class: 'form__label'
        %dd.form__item
          = f.file_field :portrait, class: 'form__field'
  .form__group
    = f.submit 'Update Profile', class: 'btn btn--wide'

