!!! 5
%html
  %head
    %meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
    :css
      body {
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      .container {
        width: 600px;
        margin: 0 auto;
      }

      .head__item {
        height: 100px;
        padding: 10px;
        color: #f8f8f8;
        background: #191d1b;
      }

      .head__text {
        width: 40%;
        font-size: 18px;
      }

      .head__img {
        width: 20%;
      }

      .head__img > img {
        display: block;
        width: 100%;
        height: 100%;
        vertical-align: middle;
        object-fit: contain;
      }

      .body {
        padding: 20px;
        text-align: center;
      }

      .foot__text {
        text-align: center;
      }

      .foot__item {
        padding: 10px 20px;
        color: #f8f8f8;
        background: #191d1b;
      }

      .foot__link {
        display: block;
        text-align: center;
        color: #cccccc;
        text-decoration: none;
      }

      .foot__link:hover {
        color: #f8f8f8;
      }

      .contact-me {
        text-align: left
      }

      .contact-me__label {
        width: 20%;
        padding: 10px;
        text-align: right;
      }

      .contact-me__content {
      }

  %body
    %table.container
      %thead
        %tr
          %th.head__item.head__text
            Tracy's
          %th.head__item.head__img
            %img(src="http://placehold.it/400x400")
          %th.head__item.head__text Photo Studio
      %tbody
        %tr
          %td.body(colspan=3)
            = yield
      %tfoot.foot
        %tr
          %td.foot__item.foot__text(colspan=3)
            Visit Me At
        %tr
          %td(colspan=3)
            %table
              %tr
                %td.foot__item
                  %a.foot__link(href="#") Place 1
                %td.foot__item
                  %a.foot__link(href="#") Place 2
                %td.foot__item
                  %a.foot__link(href="#") Place 3
                %td.foot__item
                  %a.foot__link(href="#") Place 4
